<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="io.sczyh30.pim.gui.controller.AddNoteController"
          hgap="10" vgap="10" prefHeight="180" prefWidth="320">
  <HBox GridPane.columnIndex="0" GridPane.rowIndex="2">
    <Text text="Note Text: ">
      <HBox.margin>
        <Insets left="30.0"/>
      </HBox.margin>
    </Text>
    <TextField fx:id="noteTextField" prefHeight="60">
      <HBox.margin>
        <Insets left="10.0"/>
      </HBox.margin>
    </TextField>
  </HBox>
  <HBox GridPane.columnIndex="0" GridPane.rowIndex="4">
    <Button onMouseClicked="#addNote" text="Add">
      <HBox.margin>
        <Insets left="70.0"/>
      </HBox.margin>
    </Button>
    <Button onMouseClicked="#clearText" text="Clear">
      <HBox.margin>
        <Insets left="70.0"/>
      </HBox.margin>
    </Button>
  </HBox>
</GridPane>
